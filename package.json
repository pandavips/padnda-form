{
  "name": "pd-form",
  "version": "1.0.0",
  "description": "A Vue 3 component library for building forms with Element Plus.",
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/src/core/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/panda-form"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b &&vite build --mode lib",
    "build:lib": "vue-tsc -b &&vite build --mode lib",
    "prepublish-check": "bash scripts/prepublish-check.sh",
    "publish:npm": "npm run build && npm publish",
    "preview": "vite preview",
    "test": "vitest --watch"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@shikijs/vitepress-twoslash": "^3.1.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.4",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitepress-demo-preview/component": "^2.3.2",
    "@vitepress-demo-preview/plugin": "^1.4.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "jsdom": "^26.0.0",
    "sass": "^1.79.4",
    "semantic-release": "^21.0.1",
    "typescript": "^5.5.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.2.2",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.8",
    "vue": "^3.5.3",
    "vue-tsc": "^2.0.29"
  },
  "peerDependencies": {
    "element-plus": "2.x",
    "vue": "3.x"
  },
  "dependencies": {
    "element-plus": "~2.9.6",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "search-insights"
      ]
    }
  },
  "author": "Panda",
  "license": "MIT",
  "homepage": "https://github.com/your-username/panda-form#readme",
  "bugs": {
    "url": "https://github.com/your-username/panda-form/issues"
  },
  "keywords": [
    "vue3",
    "vue-component",
    "ui-component",
    "element-plus",
    "form",
    "form-builder",
    "json-form"
  ]
}
